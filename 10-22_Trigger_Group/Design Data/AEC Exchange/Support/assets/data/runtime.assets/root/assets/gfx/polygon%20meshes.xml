<Definition id="gfx polygon meshes">

  <!--
    
    basic polygonal mesh construct
      IDX : role for 0:1 nested <Data> element containing vertex indices
      ATT : role for 0:1 nested <Data> element containing the simplices attributes
      BINDING : role for 0:1 nested <Data> element containing remapping indices
    
  -->
  <Construct id="gfx.cstr.simplex">
    <Simplex idx="IDX" att="ATT" bind="BINDING"/>
  </Construct>
  
  <!-- 
  
    polygonal mesh data
    
    gfx.trait.geo.prim : polygon set characteristics
    
  -->
  <Trait id="gfx.trait.geo.prim">
    <Link to="gfx.attr.degree"/>
  </Trait>
  
  <!--
    
    basic polygon mesh <Node> and <Data> types
    
    gfx.type.geo.polymesh : must be used by <Node> elements interpreted as sets of polygons
    gfx.type.idx.polygon : must be used by <Data> elements interpreted as arbitrary polygon index buffers
            
   -->
  <Type id="gfx.type.idx.polygon" trait="gfx.trait.idx.point" blksize="1024"/>
  <Type id="gfx.type.geo.polymesh" trait="gfx.trait.geo.prim" construct="gfx.cstr.simplex"/>

</Definition>