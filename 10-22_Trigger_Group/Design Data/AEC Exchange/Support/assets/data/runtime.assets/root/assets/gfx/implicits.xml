<Definition id="gfx implicits">

  <!--
    
    basic implicit construct
      PRIM : role for 0:n nested <Data> element containing the implicit definitions
    
  -->
  <Construct id="gfx.cstr.implicit">
    <Implicit primitives="PRIM"/>
  </Construct>

  <!-- 
  
    polygonal mesh data
    
    gfx.trait.geo.prim : polygon set characteristics
    
  -->
  <Trait id="gfx.trait.imp.anchor">
    <Link to="gfx.attr.xyz"/>
    <Link to="gfx.attr.normal"/>
  </Trait>
  
  <Trait id="gfx.trait.imp.circle">
    <Link to="gfx.attr.xy"/>
    <Link to="gfx.attr.radius"/>
  </Trait>

  <Trait id="gfx.trait.imp.ellipse">
    <Link to="gfx.attr.xy"/>
    <Link to="gfx.attr.rotation"/>
    <Link to="gfx.attr.major"/>
    <Link to="gfx.attr.minor"/>
  </Trait>

  <Trait id="gfx.trait.imp.rectangle">
    <Link to="gfx.attr.xy"/>
    <Link to="gfx.attr.width"/>
    <Link to="gfx.attr.height"/>
    <Link to="gfx.attr.rotation"/>
  </Trait>

  <Trait id="gfx.trait.imp.oval">
    <Link to="gfx.attr.xy"/>
    <Link to="gfx.attr.vec2"/>
    <Link to="gfx.attr.radius"/>
  </Trait>

  <Trait id="gfx.trait.imp.line">
    <Link to="gfx.attr.xy"/>
    <Link to="gfx.attr.vec2"/>
  </Trait>

  <!--
    
    basic polygon mesh <Node> and <Data> types
    
            
   -->
  <Type id="gfx.type.geo.implicit" trait="gfx.trait.imp.anchor" construct="gfx.cstr.implicit"/>
  
  <Type id="gfx.type.geo.circle" trait="gfx.trait.imp.circle"/>
  <Type id="gfx.type.geo.ellipse" trait="gfx.trait.imp.ellipse"/>
  <Type id="gfx.type.geo.rectangle" trait="gfx.trait.imp.rectangle"/>
  <Type id="gfx.type.geo.oval" trait="gfx.trait.imp.oval"/>
  <Type id="gfx.type.geo.line" trait="gfx.trait.imp.line"/>

</Definition>